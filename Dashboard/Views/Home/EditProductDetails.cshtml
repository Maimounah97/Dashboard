@model ProductDetailes
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@{
	<div class="text-center">
		@foreach(var p in ViewBag.Products)
		{
			@if( p.Id == Model.ProductId)
			{
				<h4 style="font-family:cairo">@p.ProductName</h4>
			}
		}
		
	</div>
	<form asp-action="UpdateProductDetails" method="post">
            <input type="hidden" asp-for="@Model.Id" />
		    <input type="hidden" asp-for="@Model.ProductId" />
            <div class="row">
			<div class="col-6 mb-3">
				<label for="Model" class="form-label">الطراز</label>
				<input asp-for="@Model.Model" type="text" class="form-control" name="Model" id="Model">
			</div>
			<div class="col-6 mb-3">
				<label for="QTY" class="form-label">الكمية</label>
				<input asp-for="@Model.QTY" type="text" class="form-control" name="QTY" id="QTY">
			</div>
			<div class="col-6 mb-3">
				<label for="Color" class="form-label">اللون</label>
				<input asp-for="@Model.Color" type="text" class="form-control" name="Color" id="Color">
			</div>
			<div class="col-6 mb-3">
				<label for="price" class="form-label">السعر</label>
				<input asp-for="@Model.price" type="text" class="form-control" name="price" id="price">
			</div>
			<div class="col-6 mb-3">
				<label for="Image" class="form-label">صورة المنتج</label>
				<input asp-for="@Model.Image" type="text" class="form-control" name="Image" id="Image">
			</div>
			<div class="col-12 mb-3">
				<label for="Description" class="form-label">الوصف</label>
				<input asp-for="@Model.Description" type="text" class="form-control" name="Description" id="Description">
			</div>
                <div class="col-12 d-flex mt-2 justify-content-sm-center">
				<button type="submit" class="btn btn-primary rounded-pill pl-5"> حفظ </button>
            </div>
			</div>
        </form>
}
